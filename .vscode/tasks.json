{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"run",
				"compile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false,
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Watch Extension",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"run",
				"watch"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		}
	]
}